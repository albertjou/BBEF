<%= form_for(@sponsor) do |f| %>
			<div class="span12">
				<h2>Add a new sponsor</h2>
			</div>

			<% if f.object.errors.any? %>
			  <div id="error_explanation">
			    <div class="alert alert-error">
			      The form contains <%= pluralize(f.object.errors.count, "error") %>.
			    </div>
			    <ul>
			    <% f.object.errors.full_messages.each do |msg| %>
			      <li>* <%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>
			
			<div class="span5">
				<%= f.label :first_name, "First Name" %>
				<%= f.text_field :first_name %>

				<%= f.label :last_name, "Last Name" %>
				<%= f.text_field :last_name %>

				<%= f.label :current_balance, "Current Balance" %>
				<%= f.text_field :current_balance, value: number_to_currency(@sponsor.current_balance, unit: '') %>

				<%= f.label :date_paid, "Date Paid" %>
				<%= f.text_field :date_paid, value: @sponsor.date_paid && @sponsor.date_paid.strftime("%d/%m/%Y") %>
			</div>

			<div class="span5">
				<%= f.label :address, "Address" %>
				<%= f.text_field :address %>

				<%= f.label :city, "City" %>
				<%= f.text_field :city %>

				<%= f.label :state, "State" %>
				<%= f.text_field :state %>

				<%= f.label :postcode, "Postcode" %>
				<%= f.text_field :postcode %>
			</div>

			<div class="span5">
				<%= f.label :home_phone, "Home Phone" %>
				<%= f.text_field :home_phone %>

				<%= f.label :mobile, "Mobile" %>
				<%= f.text_field :mobile %>

				<%= f.label :email, "Email" %>
				<%= f.text_field :email %>

				<%= f.label :contact_method, "Contact Method" %>
				<%= f.text_field :contact_method %>
			</div>


			<div class="span12">
				<%= f.submit "Save", class: "tiny submit button", id: "#{action}_sponsor" %>
				<%= link_to "Cancel", cancel_path, id: "cancel_action", class: 'tiny cancel button' %>
			</div>
<% end %>