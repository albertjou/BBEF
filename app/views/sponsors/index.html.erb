<%= link_to "Create Sponsor", new_sponsor_path, id: "sponsor_create_link" , class: 'btn btn-large'%>

<table id="sponsors" >
	<thead>
		<tr>
			<th>Name</th>
			<th>Current Balance</th>
			<th>Date Paid</th>
		</tr>
	</thead>
	<tbody>
		<% @sponsors.each do |sponsor| %>
		<tr class="sponsor">
			<td><%= sponsor.first_name %> <%= sponsor.last_name %></td>
			<td><%= number_to_currency sponsor.current_balance %></td>
			<td><%= sponsor.date_paid.strftime("%d/%m/%Y") %></td>
		</tr>
		<% end %>	
	</tbody>
</table>