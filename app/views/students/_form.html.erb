<%= form_for(@student) do |f| %>

	<% if f.object.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(f.object.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% f.object.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>


	<div class="span5">
		<%= f.label :first_name, "First Name" %>
		<%= f.text_field :first_name %>

		<%= f.label :last_name, "Last Name" %>
		<%= f.text_field :last_name %>

		<%= f.label :dob, "Date of Birth" %>
		<%= f.date_select(:dob, :start_year => Time.now.year - 5, :end_year => Time.now.year - 40, :order => [:day, :month, :year]) %>

		<%= f.label :sex, "Sex" %>
		<%= f.select(:sex, [['Female', Student::GENDER_FEMALE], ['Male', Student::GENDER_MALE]]) %>>
	</div>

	<div class="span5">


		<%= f.label :grade, "Grade" %>
		<%= f.text_field :grade %>

		<%= f.label :institute, "School/College" %>
		<%= f.text_field :institute %>

	</div>

    If in Collage
	<div class="span2">


		<%= f.label :course_type, "Course Type" %>
		<%= f.text_field :course_type %>

		<%= f.label :number_of_years_in_collage, "Number Of Years" %>
		<%= f.text_field :number_of_years_in_collage %>

	</div>

	<div class="span12">
		<%= f.submit "Save", class: "tiny submit button", id: "#{action}_student" %>
        <%= link_to "Cancel", cancel_path, id: "cancel_action", class: 'tiny cancel button' %>
	</div>	
<% end %>
